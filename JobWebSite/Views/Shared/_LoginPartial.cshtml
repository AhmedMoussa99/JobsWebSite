@using Microsoft.AspNet.Identity
@using JobWebSite.Models
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        var db = new ApplicationDbContext();
        var UserId = User.Identity.GetUserId();
        var CurrentUser = db.Users.Where(a => a.Id == UserId).SingleOrDefault();

        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span>
                    <strong>Welcome @CurrentUser.UserName !</strong>
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <div style="padding:10px; padding-bottom:0px;width:360px;">
                            <div class="row">
                                <div class="col-lg-3">
                                    <p class="text-center">
                                        <span class="glyphicon glyphicon-user" style="font-size:90px;"></span>
                                    </p>
                                </div>
                                <div class="col-lg-9">
                                    <p class="text-left">
                                        <strong>
                                            @CurrentUser.UserName
                                        </strong>
                                    </p>
                                    @if (CurrentUser.UserType == "Puplishers")
                                    {
                                        <a href="~/Home/GetJobsByPublisher" class="btn btn-success btn-block">Jobs You Published</a>
                                        <a href="~/Jobs/Create" class="btn btn-success btn-block">Create New Job</a>
                                    }
                                    else
                                    {
                                        <a href="~/Home/GetJobsByUser" class="btn btn-success btn-block">Jobs You Applied For</a>
                                    }
                                    <a href="~/Account/EditProfile" class="btn btn-primary btn-block">Account Settings</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-block">Log off</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
            @*<li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
        </ul>
    }
}
else
{
   
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="~/Account/Login">
                <i class="glyphicon glyphicon-user"></i>
                Sign In
            </a>
        </li>
        <li>
            <a href="~/Account/Register">
                <i class="glyphicon glyphicon-lock"></i>
                Sign Up
            </a>
        </li>
    </ul>
}
